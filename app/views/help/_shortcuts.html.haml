                  .key a
                %td 受让人更改
              %tr
                %td.shortcut
                  .key m
                %td 更改里程碑


:javascript
  $('.js-more-help-button').click(function(e){
      $(this).remove()
      $('.hidden-shortcut').show()
      e.preventDefault()
  });
