- unless defined?(project)
  - project = @project

- @commits.group_by { |c| c.committed_date.to_date }.sort.reverse.each do |day, commits|
  .row.commits-row
    .col-md-2
      %h4
        %i.fa.fa-calendar
        %span= day.strftime("%Y年%m月%d日")
      %p= pluralize(commits.count, '')+'提交'
    .col-md-10
      %ul.bordered-list
        = render commits, project: project
  %hr.lists-separator
