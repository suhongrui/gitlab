- if @contributed_projects.present?
  .panel.panel-default
    .panel-heading 项目的贡献
    %ul.well-list
      - @contributed_projects.sort_by(&:star_count).reverse.each do |project|
        %li
          = link_to_project project
          %span.pull-right.light
            %i.fa.fa-star
            = project.star_count

- if @projects.present?
  .panel.panel-default
    .panel-heading 个人项目
    %ul.well-list
      - @projects.sort_by(&:star_count).reverse.each do |project|
        %li
          = link_to_project project
          %span.pull-right.light
            %i.fa.fa-star
            = project.star_count
